{
  "manifest_version": 3,
  "name": "Moodle Gemini Assistant MVP",
  "version": "1.1.0",
  "description": "RÃ©ponses QCM Moodle avec Gemini AI",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "commands": {
    "analyze-question": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Analyser la question avec Gemini AI"
    }
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["test/*", "upload/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

